.container {
  padding: 15rpx;
  background: linear-gradient(135deg, #6e8efb 0%, #a777e3 100%);
  min-height: 100vh;
}

.header {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  display: block;
  margin-bottom: 15rpx;
}

.description {
  font-size: 26rpx;
  color: #7f8c8d;
}

.main-content {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.workspace {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 30rpx;
  order: 2;
  height: 50vh;
  min-height: 300rpx;
  display: flex;
  flex-direction: column;
}

.workspace-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.workspace-controls {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.workspace-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
}

.zoom-level {
  font-size: 26rpx;
  color: #7f8c8d;
}

.toggle-guide-btn {
  padding: 8rpx 16rpx !important;
  font-size: 24rpx !important;
  background: rgba(108, 117, 125, 0.1) !important;
  color: #6c757d !important;
  border: 2rpx solid #6c757d !important;
  border-radius: 20rpx !important;
  transition: all 0.3s ease;
}

.toggle-guide-btn.active {
  background: rgba(52, 152, 219, 0.1) !important;
  color: #3498db !important;
  border-color: #3498db !important;
}

.toggle-guide-btn:active {
  transform: scale(0.95);
}

.base-component-container {
  flex: 1;
  overflow: hidden;
  position: relative;
  border: 2rpx solid #bdc3c7;
  border-radius: 24rpx;
  background: #ecf0f1;
  touch-action: none;
  transform: translateZ(0); /* 强制启用硬件加速 */
  backface-visibility: hidden; /* 防止闪烁 */
}

.base-component {
  width: 100%;
  height: 100%;
  position: relative;
  will-change: transform; /* 启用硬件加速 */
  transition: none; /* 移除过渡效果，避免拖动时的延迟 */
}

.movable-area {
  position: absolute;
  background: rgba(46, 204, 113, 0.2);
  border: 2rpx dashed #2ecc71;
}

.non-movable-area {
  position: absolute;
  background: rgba(231, 76, 60, 0.3);
  border: 2rpx dashed #e74c3c;
}

.patch {
  position: absolute;
  background: rgba(52, 152, 219, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: bold;
  user-select: none;
  touch-action: none;
  will-change: transform; /* 启用硬件加速 */
  transform-origin: center center; /* 确保变换原点一致 */
}

.patch.selected {
  box-shadow: 0 0 0 6rpx #3498db, 0 0 30rpx rgba(52, 152, 219, 0.5);
  z-index: 100;
}

.patch-text {
  font-size: 28rpx;
}

.rotate-handle {
  position: absolute;
  right: 5rpx;
  bottom: 5rpx;
  width: 40rpx;
  height: 40rpx;
  background: #3498db;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.rotate-icon {
  font-size: 28rpx;
  color: white;
}

.zoom-hint {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  z-index: 10;
  pointer-events: none;
  opacity: 0;
  transition: opacity 0.3s;
}

.zoom-hint.show {
  opacity: 1;
}

.controls {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 30rpx;
  order: 1;
}

.control-group {
  margin-bottom: 40rpx;
}

.control-title {
  font-size: 32rpx;
  margin-bottom: 24rpx;
  color: #2c3e50;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.icon {
  color: #6e8efb;
  font-size: 32rpx;
}

.button-group {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

button {
  padding: 24rpx 30rpx;
  color: white;
  border: none;
  border-radius: 24rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
}

button:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.btn-add {
  width: 100% !important;
  background: linear-gradient(135deg, #6e8efb 0%, #a777e3 100%);
}

.status {
  margin-top: 40rpx;
  padding: 30rpx;
  border-radius: 24rpx;
  background: rgba(236, 240, 241, 0.7);
}

.status-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx dashed #bdc3c7;
}

.status-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.instructions {
  margin-top: 40rpx;
  background: rgba(236, 240, 241, 0.7);
  padding: 30rpx;
  border-radius: 24rpx;
}

.gesture-hints {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
  margin-top: 30rpx;
}

.gesture {
  display: flex;
  align-items: center;
  gap: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  padding: 20rpx;
  border-radius: 20rpx;
}

.gesture-icon {
  width: 80rpx;
  height: 80rpx;
  background: #3498db;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 36rpx;
}

/* 平板和更大屏幕的响应式设计 */
@media (min-width: 768px) {
  .main-content {
    flex-direction: row;
  }
  
  .workspace {
    flex: 2;
    order: 1;
    height: 65vh;
  }
  
  .controls {
    flex: 1;
    order: 2;
  }
  
  .button-group {
    grid-template-columns: 1fr 1fr;
  }
}